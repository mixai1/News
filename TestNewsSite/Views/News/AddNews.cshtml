<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("AddNewNews", "News", new { RedirectUrl = Model.RedirectUrl }, FormMethod.Post))
             {
                <h4>Enter News Details Info</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Heading, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Heading, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Heading, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Model.ButtonName" class="btn btn-default" />
                    </div>
                </div>
             }

        </section>
    </div>
</div>
