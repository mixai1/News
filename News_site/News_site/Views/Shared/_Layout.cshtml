<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.css" media="screen,projection" />

    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">*@
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]-News_site</title>
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Authorize: @User.Identity.IsAuthenticated</p>
        <p>UserName: @User.Identity.Name</p>

        <form method="post" asp-controller="Account" asp-action="LogOff">
            <input type="submit" value="Exit" />
        </form>
    }
    else
    {
        <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Login">Login</a>
        <br>
        <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Register">Register</a>

    }
    <ul id="dropdown1" class="dropdown-content">
        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">three</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper purple blue darken-3">
            <a href="#!" class="brand-logo"><i class="material-icons">cloud</i> Logo </a>
            <ul class="right hide-on-med-and-down">
                <li><a href="sass.html">Sass</a></li>
                <li><a href="badges.html">Components</a></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-trigger" asp-area="#" asp-controller="#" data-target="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a></li>
                <li><a asp-area="#" asp-controller="#"><i class="material-icons">search</i></a></li>
                <li><a asp-area="#" asp-controller="#"><i class="material-icons">view_module</i></a></li>
                <li><a asp-area="#" asp-controller="#"><i class="material-icons">account_circle</i></a></li>
                <li><a asp-area="#" asp-controller="#"><i class="material-icons">more_vert</i></a></li>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col s12 m2 12">
            <div class="card">
                <div class="card-image">
                    <img src="https://materializecss.com/images/sample-1.jpg">
                    <span class="card-title">Card Title</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="card-content">
                    <p>
                        I am a very simple card. I am good at containing small bits of information. I am convenient
                        because I require little markup to use effectively.
                    </p>
                </div>
            </div>
        </div>

        <div class="col s12 m8 19">
            <div class="container one">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/js/materialize.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>*@

</body>

</html>
