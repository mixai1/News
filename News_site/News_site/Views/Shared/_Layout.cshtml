<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <link type="text/css" rel="stylesheet" href="~/css/materialize.css" media="screen,projection" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]-News_site</title>
</head>

<body>
    <nav>
        @if (User.IsInRole("admin"))
        {
            <ul id='dropdown1' class='dropdown-content'>
                <li><a asp-action="Index" asp-controller="Role">List Roles</a></li>
                <li><a asp-action="Index" asp-controller="Users">List Users</a></li>
                <li class="divider" tabindex="-1"></li>
                <li><a href="#!"><i class="material-icons">view_module</i>four</a></li>
                <li><a href="#!"><i class="material-icons">cloud</i>five</a></li>
            </ul>
        }
        <div class="nav-wrapper purple blue darken-3">
            <a asp-action="Index" asp-controller="Home" class="brand-logo"><i class="material-icons">cloud</i> News </a>
            <ul class="right hide-on-med-and-down">
                <!-- Dropdown Trigger -->
                <a class='dropdown-trigger btn' href='#' data-target='dropdown1'>Admin</a>
                <li><a asp-area="#" asp-controller="#"><i class="material-icons">search</i></a></li>
                <li><a asp-controller="News" asp-action="AddNews"><i class="material-icons">view_module</i></a></li>
                <li><a asp-action="Login" asp-controller="Account"><i class="material-icons">account_circle</i></a></li>
                <li><a asp-controller="#" asp-action="#"><i class="material-icons">more_vert</i></a></li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="row">
        <div class="col s12 m2 12">
            <div class="card">
                <div class="card-image">
                    <img src="https://icon-library.net/images/icon-avatar/icon-avatar-19.jpg" />
                    <span class="card-title"></span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="card-content">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>
                            <blockquote>
                                <p class="flow-text">UserName: @User.Identity.Name</p>
                            </blockquote>
                            <form method="post" asp-controller="Account" asp-action="LogOff">
                                <input class="btn btn-sm btn-primary" type="submit" value="Exit" />
                            </form>
                        </div>
                    }
                    else
                    { <div>
                            <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col s12 xl10 19">
            <div class="container one">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <!--JavaScript at end of body for optimized loading-->
    <script src="~/js/materialize.js"></script>
    <script type="text/javascript">
        $('.dropdown-trigger').dropdown();
    </script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="~/lib/Microsoft.jQuery.Unobtrusive.Ajax/jquery.unobtrusive-ajax.min.js"></script>
</body>

</html>
